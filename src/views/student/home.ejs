<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/icon.css" />
    <link rel="stylesheet" href="/css/sb-admin-2.min.css" />
    <link rel="stylesheet" href="/css/fonts-admin2.css" />
  </head>
  <body>
    <div id="wrapper">
      <%- include('../partials/nav_student.ejs',{name:user.name}) %>
      <!-- Body wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <div class="container">
            <!-- Header -->
            <div class="row container">
              <!-- Title page -->
              <h2 class="text-primary">Announcement and News</h2>
            </div>

            <!-- Show news list -->
            <div style="padding-bottom: 20px;" class="row">
              <!-- Learning -->
              <div
                class="col-4 border border-bottom-0 border-top-0 border-right-0"
              >
                <h5 class="text-primary">Learning</h5>
                <!-- Show Learning -->
                <% learning.forEach(item=>{%>
                <div
                  style="margin-bottom: 20px; padding-top: 10px;"
                  class="card"
                  style="width: 90%;"
                >
                  <img
                    class="card-img-top"
                    src="/uploads/news/<%-item.img%>"
                    alt="Card image"
                    style="width: 100%; height: 150px; object-fit: contain;"
                  />
                  <div class="card-body">
                    <h4 class="card-title"><%-item.title%></h4>
                    <p class="card-text">
                      <%-item.desc%>
                    </p>
                    <footer
                      style="text-align: right;"
                      class="blockquote-footer"
                    >
                      <%-item.time%>
                    </footer>
                    <a
                      style="width: 95%; margin-top: 10px;"
                      href="/student/news/<%-item._id%>"
                      class="btn btn-primary btn-sm"
                      >Show more</a
                    >
                  </div>
                </div>
                <%});%>
              </div>
              <!-- Activities -->
              <div class="col-4 border border-bottom-0 border-top-0">
                <h5 class="text-primary">Activities</h5>
                <!-- Show activities -->
                <% activities.forEach(item=>{%>
                <div
                  style="margin-bottom: 20px; padding-top: 10px;"
                  class="card"
                  style="width: 90%;"
                >
                  <img
                    class="card-img-top"
                    src="/uploads/news/<%-item.img%>"
                    alt="Card image"
                    style="width: 100%; height: 150px; object-fit: contain;"
                  />
                  <div class="card-body">
                    <h4 class="card-title"><%-item.title%></h4>
                    <p class="card-text">
                      <%-item.desc%>
                    </p>
                    <footer
                      style="text-align: right;"
                      class="blockquote-footer"
                    >
                      <%-item.time%>
                    </footer>
                    <a
                      style="width: 95%; margin-top: 10px;"
                      href="/student/news/<%-item._id%>"
                      class="btn btn-primary btn-sm"
                      >Show more</a
                    >
                  </div>
                </div>
                <%});%>
              </div>
              <!-- Tuition fees -->
              <div
                class="col-4 border border-bottom-0 border-top-0 border-left-0"
              >
                <h5 class="text-primary">Tuition Fees</h5>
                <!-- Show tuition fees -->
                <% fees.forEach(item=>{%>
                <div
                  style="margin-bottom: 20px; padding-top: 10px;"
                  class="card"
                  style="width: 90%;"
                >
                  <img
                    class="card-img-top"
                    src="/uploads/new/<%-item.img%>"
                    alt="Card image"
                    style="width: 100%; height: 150px; object-fit: contain;"
                  />
                  <div class="card-body">
                    <h4 class="card-title"><%-item.title%></h4>
                    <p class="card-text">
                      <%-item.desc%>
                    </p>
                    <footer
                      style="text-align: right;"
                      class="blockquote-footer"
                    >
                      <%-item.time%>
                    </footer>
                    <a
                      style="width: 95%; margin-top: 10px;"
                      href="/student/news/<%-item._id%>"
                      class="btn btn-primary btn-sm"
                      >Show more</a
                    >
                  </div>
                </div>
                <%});%>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- End body warper -->
    </div>

    <!-- Script for file -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
  </body>
</html>

